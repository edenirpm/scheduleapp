unit model.empresa;

interface
uses
model.endereco,
model.telefone;
type
TEmpresa = class
  private
    FNome: string;
    FEndereco: TEndereco;
    FTelefone: TTelefone;
    procedure SetEndereco(const Value: TEndereco);
    procedure SetNome(const Value: string);
    procedure SetTelefone(const Value: TTelefone);
  published
  property Nome:string read FNome write SetNome;
  property Endereco:TEndereco read FEndereco write SetEndereco;
  property Telefone:TTelefone read FTelefone write SetTelefone;
  constructor create;
  destructor destroy;
end;

implementation

{ TEmpresa }

constructor TEmpresa.create;
begin
FEndereco:=TEndereco.create;
FTelefone:=TTelefone.create;
end;

destructor TEmpresa.destroy;
begin
 Fendereco.disposeof;
 FTelefone.Disposeof;
end;

procedure TEmpresa.SetEndereco(const Value: TEndereco);
begin
  FEndereco := Value;
end;

procedure TEmpresa.SetNome(const Value: string);
begin
  FNome := Value;
end;

procedure TEmpresa.SetTelefone(const Value: TTelefone);
begin
  FTelefone := Value;
end;

end.
